<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Our main page">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>CS 348 IMDB Project</title>
</head>

<body>
    <div class="search-wrapper">
        <center> 
            <br>
            <h1><label for="search">Your collection</label></h1><br>
        </center>
    </div>
    <div class="media-cards">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Watched?</th>
                    <th scope="col">Your rating</th>
                    <th scope="col">Notes</th>
                </tr>
            </thead>
            <tbody>
                <% if(media) { %>
                    <% for(var i=0; i < media.length; i++) { %>
                        <tr>
                            <th scope="row"> <a href="/collection/<%= media[i].collectionID %>"> <%- media[i].originalTitle %> </a></th>
                            <td> <%- media[i].isWatched == 1 ? "Yes" : "No"%> </td>
                            <td> <%- media[i].rating || "N/A" %> </td>
                            <td> <%- media[i].notes || "N/A" %> </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
        <br>
        <% if(recommendations) { %>
        Recommended movies/TV shows based on your collection:
        <table>
            <tr>
                <th>Title</th>
            </tr>
            <% if(recommendations) { %>
                <% for(var i=0; i < recommendations.length; i++) { %>
                    <tr class="card">
                        <td> <a href="/media/<%= recommendations[i].titleID %>"> <%- recommendations[i].originalTitle %> </a></td>
                    </tr>
                <% } %>
            <% } %>
        </table>
        <% } %>
    </div>
</body>

</html>