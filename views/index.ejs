<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Our main page">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>CS 348 IMDB Project</title>
</head>

<body>
    <div class="search-wrapper">
        <center> 
            <h1><label for="search">Search Movies and TV Shows</label></h1><br>
        </center>
        <div class="d-flex flex-row justify-content-around">
            <form action="/media" method="get">
                <label>Title:</label>
                <input type="text" id="search" name="title">
                <label>Genre:</label>
                <input type="text" id="search" name="genre">
                <label>Start or Release Year:</label>
                <input type="text" id="search" name="year">
                <label>Minimum IMDB Rating:</label>
                <input type="text" id="search" name="rating">
                <input type="submit" value="Search">
            </form>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addModal">Add Movie</button>
            <form action="/collection" method="get">
                <input type="submit" value="View Collection" class="btn btn-primary">
            </form>
            <!-- Modal -->
            <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="addModalLabel">Add a movie or TV show</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <form id="add-media-form" action="/media/create" method="post">
                        <div class="modal-body">
                            <label for="addTitleID"><h6>Title ID: </h6></label>
                            <br>
                            <div id="error-message" style="color: red; display: none">Already exists. Please enter a unique title ID.</div>
                            <input type="text" id="addTitleID" class="w-75" name="addTitleID" minlength="1" maxlength="100" required>
                            <br>
                            <br>
                            <label for="addTitle"><h6>Title: </h6></label>
                            <br>
                            <input type="text" id="addTitle" class="w-75" name="addTitle" minlength="1" maxlength="100" required>
                            <br>
                            <br>
                            <label for="addGenre"><h6>Genre: </h6></label>
                            <br>
                            <input type="text" id="addGenre" name="addGenre" maxlength="50">
                            <br>
                            <br>
                            <label for="addStartYear"><h6>Start year: </h6></label>
                            <br>
                            <input type="number" id="addStartYear" name="addStartYear" min="0">
                            <br>
                            <br>
                            <label for="addRating"><h6>Rating: </h6></label>
                            <br>
                            <input type="text" id="addRating" name="addRating" maxlength="3">
                            <br>
                            <br>
                            <label for="addNumVotes"><h6>Number of Votes: </h6></label>
                            <br>
                            <input type="number" min="0" id="addNumVotes" name="addNumVotes">
                        </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button id="submit-add-media" type="submit" class="btn btn-primary">Add</button>
                        </div>
                        <script>
                            ratingField = document.getElementById("addRating")
                            titleIDField = document.getElementById("addTitleID")
                            submitButton = document.getElementById("submit-add-media")
                            addForm = document.getElementById("add-media-form")
                            errMsg = document.getElementById("error-message")

                            ratingField.addEventListener("input", () => {
                                let input = ratingField.value
                                length = input.length
                                if (length == 0 || length == 1 && '0' <= input.charAt(0) && input.charAt(0) <= '9') {
                                    submitButton.disabled = false
                                } else if (length == 3 && '0' <= input.charAt(0) && input.charAt(0) <= '9' && input.charAt(1) == '.' && '0' <= input.charAt(2) && input.charAt(2) <= '9') {
                                    submitButton.disabled = false
                                } else {
                                    submitButton.disabled = true
                                }
                            })
                            addForm.addEventListener('submit', () => {
                                event.preventDefault();
                                
                                let url = `/media/checkTitleID/${titleIDField.value}`
                                console.log(url)
                                fetch(url)
                                    .then((response) => response.json())
                                    .then((data) => {
                                        if (data.exists) {
                                            errMsg.style.display = 'block'
                                            console.log('exists')
                                        } else {
                                            // If TitleID is unique, submit the form
                                            console.log('not exists')
                                            addForm.submit()
                                        }
                                    })
                                    .catch((error) => {
                                        console.log(error)
                                })
                            })
                        </script>
                    </form>
                </div>
                </div>
            </div>
        </div>
        <br>
    </div>
    <div class="media-cards">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Start/Release Year</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Number of IMDB Votes</th>
                </tr>
            </thead>
            <tbody>
                <% if(media) { %>
                    <% for(var i=0; i < media.length; i++) { %>
                        <tr>
                            <th scope="row"> <a href="/media/<%= media[i].titleID %>"> <%- media[i].originalTitle %> </a></th>
                            <td> <%- media[i].genre == "NULL" ? "N/A" : media[i].genre %> </td>
                            <td> <%- media[i].startYear %> </td>
                            <td> <%- media[i].rating || "N/A" %> </td>
                            <td> <%- media[i].numVotes || "N/A" %> </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
    <% if(curPage) { %>
        <nav aria-label="Media navigation">
            <ul class="pagination justify-content-center">
            <% for(var i=Math.max(0, curPage - 7); i < Math.min(total / 100, curPage + 6); i++) { %>
                <li class="page-item"><a class="page-link" href="<%= newURL + `&page=${i+1}` %>"><%- i + 1 %></a></li>
            <% } %>
            </ul>
        </nav>
    <% } %>
</body>

</html>