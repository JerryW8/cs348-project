<!doctype html>

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Our main page">
    <link href="/css/styles.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>CS 348 IMDB Project</title>
</head>

<body>
    <div class="search-wrapper">
        <center> 
            <h1><label for="search">Search Movies and TV Shows</label></h1><br>
        </center>
        <form action="/media" method="get">
            <label>Title:</label>
            <input type="text" id="search" name="title">
            <label>Genre:</label>
            <input type="text" id="search" name="genre">
            <label>Start or Release Year:</label>
            <input type="text" id="search" name="year">
            <label>Minimum IMDB Rating:</label>
            <input type="text" id="search" name="rating">
            <input type="submit" value="Search">
        </form>
        <br>
    </div>
    <div class="media-cards">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Genre</th>
                    <th scope="col">Start/Release Year</th>
                    <th scope="col">Rating</th>
                    <th scope="col">Number of IMDB Votes</th>
                </tr>
            </thead>
            <tbody>
                <% if(media) { %>
                    <% for(var i=0; i < media.length; i++) { %>
                        <tr>
                            <th scope="row"> <a href="/media/<%= media[i].titleID %>"> <%- media[i].originalTitle %> </a></th>
                            <td> <%- media[i].genre %> </td>
                            <td> <%- media[i].startYear %> </td>
                            <td> <%- media[i].rating || "N/A" %> </td>
                            <td> <%- media[i].numVotes || "N/A" %> </td>
                        </tr>
                    <% } %>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>